<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/itemid_bill" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" android:text="TextView" android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" />

    <TextView android:id="@+id/unitprice_bill" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp" android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/itemid_bill"
        app:layout_constraintStart_toEndOf="@+id/itemid_bill" />

    <TextView android:id="@+id/quantity_bill" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/unitprice_bill"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toEndOf="@+id/unitprice_bill" />

    <TextView android:id="@+id/dishname_bill" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/itemid_bill"
        app:layout_constraintTop_toBottomOf="@+id/itemid_bill" />

    <TextView android:id="@+id/price_bill" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBaseline_toBaselineOf="@+id/dishname_bill"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/dishname_bill" />
</android.support.constraint.ConstraintLayout>