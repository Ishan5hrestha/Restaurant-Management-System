<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="4dp" android:paddingLeft="10dp" android:paddingRight="10dp" android:elevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/Tableid2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="10dp"
        android:text="Table Id: "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/TID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/Tableid2"
        android:layout_toRightOf="@+id/Tableid2"
        android:layout_marginTop="9dp"
        android:text="1"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/orderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OrderID: "
        android:layout_marginLeft="10dp"
        android:layout_below="@id/Tableid2"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/OID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/TID"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/orderid"
        android:layout_toRightOf="@+id/orderid"
        android:text=" 4"
        android:textSize="20dp" />

    <Button
        android:id="@+id/Served"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="118dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:fontFamily="serif"
        android:layout_toEndOf="@+id/TID"
        android:layout_toRightOf="@+id/TID"
        android:text="Served"
        android:textSize="12dp"
        android:textStyle="bold"  />

        </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/readydishesqueue"
        android:layout_marginLeft="8dp"
        android:nestedScrollingEnabled="true">
    </ListView>

    </LinearLayout>

</RelativeLayout>